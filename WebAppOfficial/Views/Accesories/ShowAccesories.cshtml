@model WebAppOfficial.Models.PurchasedAccesories

@{
    ViewBag.Title = "ShowAccesories";
}


<h2>@Model.accesories.Name</h2>
<h5>@Model.accesories.Price</h5>
<p>@Model.accesories.Description</p>
<img src="@Model.accesories.ImageUrl" alt="Ova e slika" />

<h2>Клиенти кои го купиле овој аксесоар:</h2>

<ul>
    @{

        int i = 0;
        foreach (var client in Model.clients)
        {
            <li>
                <a href="ShowClient/@i">@client.Name, @client.Surname, @client.City</a>
            </li>

            i++;
        }
    }
</ul>
